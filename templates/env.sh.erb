export HOMEBREW_ROOT=<%= @installdir %>
export HOMEBREW_CACHE=<%= @cachedir %>

export BOXEN_HOMEBREW_BOTTLE_URL=<%= scope.lookupvar("::homebrew_bottle_url") %>

<% if @set_cflags_ %>
export CFLAGS="-I$HOMEBREW_ROOT/include"
<% end %>

<% if @set_ldflags_ %>
export LDFLAGS="-L$HOMEBREW_ROOT/lib"
<% end %>

# Add homebrew'd stuff to the path.

export PATH=<% if @add_bin_path_ %>$HOMEBREW_ROOT/bin:<% end %>$HOMEBREW_ROOT/sbin:$PATH

# Add homebrew'd stuff to the manpath.

<% if @add_man_path_ %>
export MANPATH=$HOMEBREW_ROOT/share/man:$MANPATH
<% end %>
